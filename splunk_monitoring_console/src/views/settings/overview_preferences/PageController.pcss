 /*  --- start of copy from less/sourcetypes/sourcetypes.pcss --- */
.main-section {
    background: $bodyBackgroundColor;

    .table-toolbar {
        padding: 8px 8px 0;

        > * {
            min-height: 28px;
            padding: 0 0 4px;

            > * {
                display: inline-block;
            }
        }
        .filter-container {
            border-top: 1px solid $grayLightMedium;
            padding-top: 10px;

            .collection-count {
                margin-left: 13px;
                margin-right: 13px;
            }

            .select-page-count {
              float: right;
            }
        }

        .paginator-container {
          min-height: initial;
        }
    }
    .threshold-configs-grid {
        clear: both;

        .col-actions {
            white-space: nowrap;
            width: 120px;
        }
        tr.list-item {
            td {
                transition: background, 0.2s;
            }
            &:hover td {
                background-color: $tableBackgroundHover;
                transition: background, 0.02s;
            }
            .cell-name {
                word-break: break-all;
            }
        }
        .message-single {
            margin-left: 10px;
        }
        .model-description {
            color: $textGray;
            font-size: .85em;
        }
    }
}


/*  Shift error box */
.shared-flashmessages {
  padding-left: 15px;
}
/*  --- end copy --- */