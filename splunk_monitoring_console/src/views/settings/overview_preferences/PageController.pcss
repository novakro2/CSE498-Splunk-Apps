.color-control-full-col {
	float: left;
	width: 160px;
	.control-label.input-label {
	  width: 35px;
	}
	.input-value {
	  width: 40px;
	}
}

.color-range-control-container {
    width: 200px;

    .btn {
        margin: 5px 0px 5px 0px;
    }
}

.gradient-range-control-container {
    .row-container {
        padding: 5px 0px 5px 0px
    }

    div.row-title {
        display: inline-block;
        width: 60px;
        text-align: right;
        padding: 0px 5px 0px 5px;
    }

    .color-square {
        display: inline-block;
        vertical-align: middle;
    }

    .color-square.preview {
        border: none !important;
    }
}

